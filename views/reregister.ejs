</div>
  </form>


  <script>
      const form = document.querySelector('form')
      const overlay = document.querySelector('.overlay')
      const overlayError = document.querySelector('.overlay-error')
      const okBtn = document.querySelectorAll('.popup button')

      okBtn.forEach(e => {
          e.addEventListener('click', () => {
              overlay.style.display = 'none'
              overlayError.style.display = 'none'
          })
      })
      overlay.addEventListener('click', e => {
          if (e.target.className === 'overlay')
              overlay.style.display = 'none'
          else
              return 0
      })
      overlayError.addEventListener('click', e => {
          if (e.target.className === 'overlay-error')
              overlayError.style.display = 'none'
          else
              return 0
      })

      window.onload = async () => {
          const resClosed = await fetch('/batch', {
              method: 'POST',
              body: JSON.stringify({ type: 'closed' }),
              headers: {
                  'Content-Type': 'application/json'
              }
          })
          const { closed } = await resClosed.json()

          form.addEventListener('submit', async e => {
              e.preventDefault()

              const name  = form.name.value
              const email = form.email.value
              const phone = form.phone.value
              const session = form.session.value

              const res = await fetch('/reregister', {
                  method: 'POST',
                  body: JSON.stringify({ type: 'detail', email, phone }),
                  headers: {
                      'Content-Type': 'application/json'
                  }
              })
              const { stud, found } = await res.json()
              if (closed.includes(`${+stud.batch + 1}`)) {
                  window.scrollTo(0, 0)
                  overlayError.style.display = 'block'
              } else {
                  const body = {
                      type: 'update',
                      batch: `${+stud.batch + 1}`,
                      session,
                      phone,
                      email,
                      found
                  }
                  const resUpdate = await fetch('/reregister', {
                      method: 'POST',
                      body: JSON.stringify(body),
                      headers: {
                          'Content-Type': 'application/json'
                      }
                  })
                  const data = await resUpdate.json()
                  window.scrollTo(0, 0)
                  const okName = document.querySelector('[data-field="name"]')
                  const okCode = document.querySelector('[data-field="code"]')
                  const okBatch = document.querySelector('[data-field="batch"]')
                  const okSession = document.querySelector('[data-field="session"]')
                  const okZoom = document.querySelector('[data-field="zoom"]')

                  overlay.style.display = 'block'

                  okName.textContent = data.stud.name
                  okCode.textContent = data.stud.code
                  okBatch.textContent = data.stud.batch
                  okZoom.textContent = `${data.stud.code} ${data.stud.name}`
                  okSession.textContent = data.stud.session === 'm' ? "Morning" : "Evening"
              }
          })
      }
  </script>
