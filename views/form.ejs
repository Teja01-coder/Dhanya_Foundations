  <style type="text/css" media="screen">
    body {
        overflow-x: hidden;
    }
    .overlay {
        width: 100vw;
        height: 100vh;
        display: none;
        overflow: hidden;
        background-color: rgba(0, 0, 0, 0.4);
        position: absolute;
        z-index: 99;
    }
    .popup {
        width: 300px;
        height: 317px;
        padding: 10px 15px;
        position: relative;
        margin: auto;
        top: 15%;
        background-color: white;
        border-radius: 10px;
        text-align: center;
    }
    .popup>button {
        padding: 7px 23px;
        border: 0;
        border-radius: 30px;
        background-color: lightgrey;
    }
    .popup h5 {
        margin: 19px 0;
    }
    .popup>button:active {
        background-color: grey;
    }
    .popup span {
        font-weight: bold;
    }
    .spannote {
        display: block;
        font-weight: normal;
        font-size: 14px;
        margin-bottom: 10px;
    }
  </style>

  <div class="overlay">
      <div class="popup">
          <h3>Registration Success</h3>
            <h5>Name:    <span data-field="name"></span></h5>
            <h5>Code:    <span data-field="code"></span></h5>
            <h5>Batch:   <span data-field="batch"></span></h5>
            <h5>Session: <span data-field="session"></span></h5>
            <span class="spannote">Please note down the details</span>
          <button>OK</button>
      </div>
  </div>

  <form class="shadow rounded-3 boxing">
    <h5>34th batch >సంకల్ప క్రియ యోగ (SKY)</h5>
    <hr>
    <div class="row">
      <!-- username -->
      <div class="col-md-4 boxing">
        <div class="sm">
          <label for="username" class="form-label labling">Name:</label>
          <input type="text" class="form-control" id="username" required>
        </div>
      </div>
    </div>
    <!-- second row of form -->
    <hr>
    <div class="row">
      <!-- address -->
      <div class="col-md-6 boxing">
        <div class="sm">
          <label for="address" class="form-label labling">Address:</label>
          <input type="text" class="form-control" id="address" required>
        </div>
      </div>
      <!-- contact/whatsapp number  -->
      <div class="col-md-4 boxing">
        <div class="sm">
          <label for="mobnumber" class="form-label labling">Contact/ Whatsapp Number:</label>
          <input type="number" class="form-control" id="mobnumber" required>
          <span class="error" style="color: red; font-size: 14px;"></span>
        </div>
      </div>
    </div>
    <!-- third row of the form -->
    <div class="row">
      <!-- town/city -->
      <div class="col-md-3 boxing">
        <div class="sm">
          <label for="location" class="form-label labling">Town/City;</label>
          <input type="text" class="form-control" id="location" required>
        </div>
      </div>
      <!-- age of the user -->
      <div class="col-md-2 boxing">
        <div class="sm">
          <label for="age" class="form-label labling">Age:</label>
          <input type="number" class="form-control" id="age" required>
        </div>
      </div>
      <!-- blood group -->
      <div class="col-md-3 boxing">
        <label for="bloodgroup" class="form-label labling" for="batchnumber">Blood Group:</label>
        <select class="form-select form-control" id="bloodgroup">
          <option selected></option>
          <option value="A+">A+</option>
          <option value="A-">A-</option>
          <option value="O+">O+</option>
          <option value="O-">O-</option>
          <option value="B+">B+</option>
          <option value="B-">B-</option>
          <option value="AB+">AB+</option>
          <option value="AB-">AB-</option>
          <option value="Other">Other</option>
        </select>
      </div>
    </div>
    </div>
    <hr>
    <!-- fourth row of the form -->
    <div class="row">
      <!-- previous health record -->
      <div class="col-md-12 boxing">
        <div class="sm">
          <label for="health" class="form-label labling"><b>*Previous Health Record:</b></label>
          <div class="form-floating">
            <textarea class="form-control" rows="2" id="health" required></textarea>
          </div>
        </div>
      </div>
    </div>
    <!-- fifth row of the form -->
    <hr>
    <div class="row">
      <!-- user qualification -->
      <div class="col-md-5 boxing">
        <div class="sm">
          <label for="userqualification" class="form-label labling">Qualification:</label>
          <input type="text" class="form-control" id="userqualification" required>
        </div>
      </div>
      <!-- user designation -->
      <div class="col-md-5 boxing">
        <div class="sm">
          <label for="userdesignation" class="form-label labling">Designation:</label>
          <input type="text" class="form-control" id="userdesignation" >
        </div>
      </div>
    </div>
    <!-- sixth row of the form -->
    <div class="row">
      <!-- introduced by  -->
      <div class="col-md-5 boxing">
        <div class="sm">
          <label for="introby" class="form-label labling">email :</label>
          <input type="text" class="form-control" id="introby" >
        </div>
      </div>
      <!-- introducer name  -->
      <div class="col-md-5 boxing">
        <div class="sm">
          <label for="introname" class="form-label labling">Introducer Name:</label>
          <input type="text" class="form-control" id="introname">
        </div>
      </div>
    </div>
    <!-- seventh row of the form  -->
    <div class="row">
      <div class="col-md-5 boxing">
        <div class="sm">
          <label for="introreg" class="form-label labling">Introducer mobile number:</label>
          <input type="number" class="form-control" id="introreg" >
        </div>
      </div>
      <div class=" col-md-5 boxing">
        <label for="session" class="form-label labling">Prefered Session:</label>
        <!-- session preference -->
        <div id="session">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="session" id="inlinecheckbox1" value="m" data-count="<%= morning %>">
            <label class="form-check-label" for="inlinecheckbox1">Morning (5am to 7am)</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="session" id="inlinecheckbox2" value="e" data-count="<%= evening %>">
            <label class="form-check-label" for="inlinecheckbox2">Evening (6pm to 8pm)</label>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <!-- terms and conditions -->
<div class="row">
  <div class="col-md-3">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" id="declaration"  value="accepted">
      <label for="declaration" class="form-label labling">*Terms and Conditions:</label>
    </div>
  </div>
  <div class="col-md-9 ">
    <p >Follow the rules and regulations.</p>
  </div>
</div>
<br>
<div class="d-grid gap-2 col-3 mx-auto">
  <button class="btn "  style=" background-color:#f56c6d; color:#ffffff"  type="submit">Submit</button>
</div>
  </form>

  <script>
      const form = document.querySelector('form')
      const overlay = document.querySelector('.overlay')
      const okBtn = document.querySelector('.popup>button')

      okBtn.addEventListener('click', () => {
          overlay.style.display = 'none'
      })
      overlay.addEventListener('click', e => {
          if (e.target.className === 'overlay')
              overlay.style.display = 'none'
          else
              return 0
      })

      window.onload = () => {
          const radios = document.querySelectorAll('input[type="radio"]')
          <% if (morning >= 1200) { %>
              radios[0].disabled = true
          <% } %>
          <% if (evening >= 1200) { %>
              radios[1].disabled = true
          <% } %>
      }

      const name = document.getElementById('username')
      const address = document.getElementById('address')
      const city = document.getElementById('location')
      const age = document.getElementById('age')
      const phone = document.getElementById('mobnumber')
      const bloodGroup = document.getElementById('bloodgroup')
      const healthRecord = document.getElementById('health')
      const introducedBy = document.getElementById('introby')
      const introducerName = document.getElementById('introname')
      const introducerRegistration = document.getElementById('introreg')
      const designation = document.getElementById('userdesignation')
      const qualification = document.getElementById('userqualification')
      const session = form.session

      form.addEventListener('submit', async e => {
          e.preventDefault()

          const details = {
              name: name.value,
              address: address.value,
              city: city.value,
              age: age.value,
              phone: phone.value,
              bloodGroup: bloodGroup.value,
              healthRecord: healthRecord.value,
              introducedBy: introducedBy.value,
              introducerName: introducerName.value,
              introducerRegistration: introducerRegistration.value,
              designation: designation.value,
              qualification: qualification.value,
              session: session.value
          }

          try {
              const res = await fetch('/register', {
                  method: 'POST',
                  body: JSON.stringify(details),
                  headers: {
                      'Content-Type': 'application/json'
                  }
              })
              const data = await res.json()
              if (data.error) {
                  document.querySelector('.error').textContent = data.error
              } else {
                  window.scrollTo(0, 0)
                  const okName = document.querySelector('[data-field="name"]')
                  const okCode = document.querySelector('[data-field="code"]')
                  const okBatch = document.querySelector('[data-field="batch"]')
                  const okSession = document.querySelector('[data-field="session"]')

                  overlay.style.display = 'block'

                  okName.textContent = data.user.name
                  okCode.textContent = data.user.code
                  okBatch.textContent = data.user.batch
                  okSession.textContent = data.user.session === 'm' ? "Morning" : "Evening"
              }

          } catch (err) {
              console.log(err)
          }
      })

  </script>
