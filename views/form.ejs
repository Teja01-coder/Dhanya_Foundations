  <script>
      const form = document.querySelector('form')
      const overlay = document.querySelector('.overlay')
      const overlayError = document.querySelector('.overlay-error')
//     const overlayDialogue = document.querySelector('.overlay-dialogue')
      const okBtn = document.querySelectorAll('.popup button')
      const batchDropdown = document.querySelector('#batch')
//     const promptYes = document.querySelector('#prompt-yes')
//     const promptNo = document.querySelector('#prompt-no')

      okBtn.forEach(e => {
          e.addEventListener('click', () => {
              overlay.style.display = 'none'
              overlayError.style.display = 'none'
 //            overlayDialogue.style.display = 'none'
          })
      })
      overlay.addEventListener('click', e => {
          if (e.target.className === 'overlay')
              overlay.style.display = 'none'
          else
              return 0
      })
//     promptYes.addEventListener('click', e => {
//         overlayDialogue.style.display = 'none'
//     })
      overlayError.addEventListener('click', e => {
          if (e.target.className === 'overlay-error')
              overlayError.style.display = 'none'
          else
              return 0
      })

      window.onload = async () => {
          const resAll = await fetch('/batch', {
              method: 'POST',
              body: JSON.stringify({ type: 'all' }),
              headers: {
                  'Content-Type': 'application/json'
              }
          })
          const { all } = await resAll.json()

          const resClosed = await fetch('/batch', {
              method: 'POST',
              body: JSON.stringify({ type: 'closed' }),
              headers: {
                  'Content-Type': 'application/json'
              }
          })
          const { closed } = await resClosed.json()

          for (let batch of all) {
              const option = document.createElement('option')
              if (!closed.includes(batch)) {
                  option.value = batch
                  option.textContent = batch
                  batchDropdown.appendChild(option)
              }
          }
      }

      const name = document.getElementById('username')
      const address = document.getElementById('address')
      const city = document.getElementById('location')
      const age = document.getElementById('age')
      const phone = document.getElementById('mobnumber')
      const bloodGroup = document.getElementById('bloodgroup')
      const healthRecord = document.getElementById('health')
      const email = document.getElementById('email')
      const introducerName = document.getElementById('introname')
      const introducerRegistration = document.getElementById('introreg')
      const designation = document.getElementById('userdesignation')
      const qualification = document.getElementById('userqualification')
      const batch = document.getElementById('batch')
      const session = form.session

      form.addEventListener('submit', async e => {
          e.preventDefault()

          const details = {
              name: name.value,
              batch: batch.value,
              address: address.value,
              city: city.value,
              age: age.value,
              phone: phone.value,
              bloodGroup: bloodGroup.value,
              healthRecord: healthRecord.value,
              email: email.value,
              introducerName: introducerName.value,
              introducerPhone: introducerRegistration.value,
              designation: designation.value,
              qualification: qualification.value,
              session: session.value
          }

          try {
              const res = await fetch('/register', {
                  method: 'POST',
                  body: JSON.stringify(details),
                  headers: {
                      'Content-Type': 'application/json'
                  }
              })
              const data = await res.json()
              if (data.error) {
                  window.scrollTo(0, 0)
                  overlayError.style.display = 'block'
              } else {
                  window.scrollTo(0, 0)
                  const okName = document.querySelector('[data-field="name"]')
                  const okCode = document.querySelector('[data-field="code"]')
                  const okBatch = document.querySelector('[data-field="batch"]')
                  const okSession = document.querySelector('[data-field="session"]')
                  const okZoom = document.querySelector('[data-field="zoom"]')

                  overlay.style.display = 'block'

                  okName.textContent = data.user.name
                  okCode.textContent = data.user.code
                  okBatch.textContent = data.user.batch
                  okZoom.textContent = `${data.user.code} ${data.user.name}`
                  okSession.textContent = data.user.session === 'm' ? "Morning" : "Evening"
              }

          } catch (err) {
              console.log(err)
          }
      })

  </script>
