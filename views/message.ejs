<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Message</title>
</head>

<body>
  <form>
    <textarea name="comments" id="comments" style="width:96%;height:90px;border:1px solid grey;padding:9px;font:22px/30px sans-serif;">
        Message....
</textarea><br>
    <input type="submit" value="Submit" style="font-size:18px;border:none;padding:8px;">
  </form>

  <script>
      const form = document.querySelector('form')

      form.addEventListener('submit', async e => {
          e.preventDefault()

          const msg = form.comments.value

          try {
              const res = await fetch('/message', {
                  method: 'POST',
                  body: JSON.stringify({ msg }),
                  headers: {
                      'Content-Type': 'application/json'
                  }
              })

              const data = res.json()
          } catch (err) {
              console.log(err)
          }
      })
  </script>

</body>

</html>
